<div class="indexWrap">
    <div id="contactContainer">
        <div id="contactImage">
        </div>
        <div id="formContainer">
            <div id="h1Wrapper">
                <h1><a href="/contact-us">CONTACT US</h1></a>
            </div>
            <h2>GET IN TOUCH WITH OUR TEAM REGARDING ANY QUESTIONS YOU MIGHT HAVE WITH OUR ACTIVITIES</h2>
            <form action="/contact-us" method="POST" action="send" enctype="multipart/form-data" id="contact-form">
                <div id="emailAndName">
                    <input type="text" name="name" id="name" placeholder="NAME*" required>
                    <input type="email" name="email" id="email" placeholder="EMAIL*" required>
                    
                </div>
                <div id="topicContainer">
                <p>TOPIC*</p>
                <div id="selectTopic">
                    <input type="radio" id="support" name="object" value="SUPPORT AN ARTIST PROJECT" checked="checked">
                    <label for="support">SUPPORT AN ARTIST PROJECT</label>

                    <input type="radio" id="advisory" name="object" value="PERSONAL ADVISOR">
                    <label for="advisory">PERSONAL ADVISOR</label>
                    
                    <input type="radio" id="sourcing" name="object" value="SPECIAL SOURCING">
                    <label for="sourcing">SPECIAL SOURCING</label>
                    
                    <input type="radio" id="openCall" name="object" value="ARTIST OPEN CALL">
                    <label for="openCall">ARTIST OPEN CALL</label>
                </div>
                </div>
                <div id="inquireAndButton">
                    <input type="text" name="body" id="body" placeholder="INQUIRE ABOUT*" required>
                    <button type="submit" value="submit" class="btnWhite">SUBMIT</button>
                </div>
            </form>
        </div>
        <div id="contactFormModal" class="modal">
            <div class="popUp">
                <span id="closeNL" class="close">&times;</span>
                <h2>YOUR MESSAGE HAS BEEN SENT</h2>
                <p>SOMEONE FROM OUR TEAM WILL GET BACK TO YOU SHORTLY</p>
            </div>
        </div>
    </div>
</div>